{
  "compilerOptions": {
    "target": "es2017",
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "pretty": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },

    "declaration": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "declarationDir": "./lib"
  },
  "include": ["src/**/*"]
}
